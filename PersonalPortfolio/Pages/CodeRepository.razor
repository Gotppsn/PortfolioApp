@page "/code-repository"
@page "/code-repository/{Id:int}"
@inject ProjectService ProjectService
@inject IJSRuntime JSRuntime

<PageTitle>Code Repository - Developer Portfolio</PageTitle>

<div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-3 text-gray-800 dark:text-white">Code Repository</h1>
    <p class="text-lg text-gray-600 dark:text-gray-300 mb-8 max-w-3xl">
        A collection of useful code snippets, examples, and solutions to common programming challenges.
    </p>

    @if (Id.HasValue)
    {
        <SnippetDetail SnippetId="@Id.Value" OnBack="BackToList" />
    }
    else
    {
        <div class="bg-white dark:bg-gray-800 shadow-lg rounded-xl p-6 mb-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div class="md:col-span-2">
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </div>
                        <input type="text" @bind-value="searchTerm" @bind-value:event="oninput" @onkeyup="HandleSearch" 
                               placeholder="Search code snippets..." 
                               class="w-full pl-10 pr-3 py-2 h-12 border border-gray-300 dark:border-gray-700 rounded-lg dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" />
                    </div>
                </div>
                
                <div>
                    <div class="relative">
                        <select @bind="selectedLanguage" @bind:after="HandleSearch" 
                                class="w-full h-12 border border-gray-300 dark:border-gray-700 rounded-lg dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent px-3 appearance-none">
                            <option value="">All Languages</option>
                            @foreach (var language in ProjectService.GetAllLanguages())
                            {
                                <option value="@language">@language</option>
                            }
                        </select>
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </div>
                    </div>
                </div>
                
                <div>
                    <div class="relative">
                        <select @bind="selectedTag" @bind:after="HandleSearch" 
                                class="w-full h-12 border border-gray-300 dark:border-gray-700 rounded-lg dark:bg-gray-700 dark:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent px-3 appearance-none">
                            <option value="">All Tags</option>
                            @foreach (var tag in ProjectService.GetAllTags())
                            {
                                <option value="@tag">@tag</option>
                            }
                        </select>
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (isLoading)
        {
            <div class="flex justify-center items-center py-16">
                <div class="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-blue-600"></div>
            </div>
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var snippet in filteredSnippets)
                {
                    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg transition-all duration-300 hover:shadow-xl hover:-translate-y-1 overflow-hidden">
                        <div class="p-6">
                            <div class="flex justify-between items-start mb-3">
                                <h3 class="text-xl font-bold text-gray-800 dark:text-white">@snippet.Title</h3>
                                <div class="flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
                                    @snippet.Language
                                </div>
                            </div>
                            <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-2 h-12">@snippet.Description</p>
                            
                            <div class="flex flex-wrap mb-4 gap-1">
                                @foreach (var tag in snippet.Tags)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200">
                                        @tag
                                    </span>
                                }
                            </div>
                            
                            <div class="flex justify-between items-center">
                                <a href="/code-repository/@snippet.Id" class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:underline font-medium">
                                    View Snippet
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                                    </svg>
                                </a>
                                <span class="text-xs text-gray-500 dark:text-gray-400">@snippet.CreatedDate.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                        
                        <div class="border-t border-gray-200 dark:border-gray-700">
                            <div class="p-4 bg-gray-800 overflow-hidden max-h-36" style="direction: ltr; text-align: left;">
                                <pre class="text-sm text-gray-200 overflow-hidden line-clamp-3 font-mono">@snippet.Code.Split('\n').Take(3).Aggregate((a, b) => a + "\n" + b)</pre>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!filteredSnippets.Any())
            {
                <div class="flex flex-col items-center justify-center py-16 px-6 bg-white dark:bg-gray-800 rounded-xl shadow-lg">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                    </svg>
                    <p class="text-gray-600 dark:text-gray-300 text-lg mb-4">No code snippets found matching your criteria.</p>
                    <button @onclick="ClearFilters" 
                            class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors shadow-md transform hover:-translate-y-1 hover:shadow-lg duration-300">
                        <div class="flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
                            </svg>
                            Clear Filters
                        </div>
                    </button>
                </div>
            }
            
            <!-- Create/Add Snippet Button -->
            <div class="fixed bottom-6 right-6">
                <button @onclick="ShowAddSnippetDialog" class="flex items-center justify-center p-4 bg-blue-600 text-white rounded-full shadow-lg hover:bg-blue-700 transition-colors transform hover:-translate-y-1 duration-300">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                    </svg>
                </button>
            </div>
        }
    }
    
    @if (showAddSnippetDialog)
    {
        <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4 z-50">
            <div class="bg-white dark:bg-gray-800 rounded-xl shadow-xl p-6 w-full max-w-4xl max-h-[90vh] overflow-y-auto">
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-2xl font-bold text-gray-800 dark:text-white">Add New Snippet</h2>
                    <button @onclick="HideAddSnippetDialog" class="text-gray-500 hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-200">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                
                <!-- Add Snippet Form would go here -->
                <p class="text-gray-600 dark:text-gray-300 mb-4">Form implementation would go here in a real application.</p>
                
                <div class="flex justify-end space-x-3 mt-6">
                    <button @onclick="HideAddSnippetDialog" class="px-4 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200">
                        Cancel
                    </button>
                    <button class="px-4 py-2 rounded-lg bg-blue-600 text-white">
                        Save Snippet
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int? Id { get; set; }

    private List<CodeSnippet> allSnippets = new List<CodeSnippet>();
    private List<CodeSnippet> filteredSnippets = new List<CodeSnippet>();
    private string searchTerm = "";
    private string selectedLanguage = "";
    private string selectedTag = "";
    private bool isLoading = true;
    private bool showAddSnippetDialog = false;

    protected override async Task OnInitializedAsync()
    {
        // Simulate loading delay
        await Task.Delay(300);
        
        allSnippets = ProjectService.GetAllCodeSnippets();
        filteredSnippets = allSnippets;
        isLoading = false;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("highlightCode");
        }
    }

    private void HandleSearch()
    {
        isLoading = true;
        
        filteredSnippets = ProjectService.SearchCodeSnippets(searchTerm, selectedLanguage, selectedTag);
        
        isLoading = false;
    }

    private void BackToList()
    {
        Id = null;
    }
    
    private void ClearFilters()
    {
        searchTerm = "";
        selectedLanguage = "";
        selectedTag = "";
        HandleSearch();
    }
    
    private void ShowAddSnippetDialog()
    {
        showAddSnippetDialog = true;
    }
    
    private void HideAddSnippetDialog()
    {
        showAddSnippetDialog = false;
    }
}