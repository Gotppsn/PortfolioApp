// PersonalPortfolio/Pages/Home.razor
@page "/"
@inject ProjectService ProjectService

<PageTitle>Developer Portfolio</PageTitle>

<div class="container mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row items-center mb-16">
        <div class="md:w-1/2 mb-8 md:mb-0">
            <h1 class="text-4xl font-bold mb-4">John Doe</h1>
            <h2 class="text-2xl text-blue-600 mb-6">Full-Stack Developer</h2>
            <p class="text-lg mb-6">
                Passionate software developer with expertise in C#, ASP.NET Core, and cloud technologies.
                Focused on building scalable, maintainable applications that solve real-world problems.
            </p>
            <div class="flex space-x-4">
                <a href="https://github.com/yourusername" target="_blank" 
                   class="bg-gray-800 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                    GitHub
                </a>
                <a href="https://linkedin.com/in/yourusername" target="_blank"
                   class="bg-blue-600 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded">
                    LinkedIn
                </a>
                <a href="/resume.pdf" target="_blank"
                   class="bg-green-600 hover:bg-green-500 text-white font-bold py-2 px-4 rounded">
                    Resume
                </a>
            </div>
        </div>
        <div class="md:w-1/2 flex justify-center">
            <img src="/images/profile.jpg" alt="John Doe" class="rounded-full w-64 h-64 object-cover shadow-lg" />
        </div>
    </div>

    <section class="mb-16">
        <h2 class="text-3xl font-bold mb-8">Featured Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var project in ProjectService.GetFeaturedProjects())
            {
                <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                    <img src="@project.ImageUrl" alt="@project.Title" class="w-full h-48 object-cover" />
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2">@project.Title</h3>
                        <p class="text-gray-600 mb-4">@project.Description</p>
                        <div class="flex flex-wrap mb-4">
                            @foreach (var tech in project.Technologies.Take(3))
                            {
                                <span class="bg-blue-100 text-blue-800 text-xs font-semibold mr-2 mb-2 px-2.5 py-0.5 rounded">
                                    @tech
                                </span>
                            }
                            @if (project.Technologies.Count > 3)
                            {
                                <span class="bg-gray-100 text-gray-800 text-xs font-semibold mr-2 mb-2 px-2.5 py-0.5 rounded">
                                    +@(project.Technologies.Count - 3) more
                                </span>
                            }
                        </div>
                        <div class="flex space-x-2">
                            <a href="@project.GitHubUrl" target="_blank"
                               class="text-gray-800 hover:text-blue-600">
                                GitHub
                            </a>
                            <a href="@project.LiveDemoUrl" target="_blank"
                               class="text-gray-800 hover:text-blue-600">
                                Live Demo
                            </a>
                            <a href="/projects/@project.Id"
                               class="text-gray-800 hover:text-blue-600">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-8">
            <a href="/projects" class="inline-block bg-blue-600 hover:bg-blue-500 text-white font-bold py-2 px-6 rounded">
                View All Projects
            </a>
        </div>
    </section>

    <section class="mb-16">
        <h2 class="text-3xl font-bold mb-6">Skills</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            @foreach (var category in ProjectService.GetSkillCategories())
            {
                <div>
                    <h3 class="text-xl font-semibold mb-3">@category</h3>
                    <ul class="space-y-2">
                        @foreach (var skill in ProjectService.GetSkillsByCategory(category))
                        {
                            <li class="flex items-center">
                                <div class="w-full bg-gray-200 rounded-full h-2.5">
                                    <div class="bg-blue-600 h-2.5 rounded-full" style="width: @(skill.ProficiencyLevel * 20)%"></div>
                                </div>
                                <span class="ml-2 text-sm font-medium">@skill.Name</span>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </section>

    <section>
        <h2 class="text-3xl font-bold mb-6">Recent Experience</h2>
        <div class="space-y-8">
            @foreach (var experience in ProjectService.GetAllExperiences().Take(2))
            {
                <div class="border-l-4 border-blue-600 pl-4">
                    <h3 class="text-xl font-bold">@experience.Position</h3>
                    <div class="text-lg text-gray-600">@experience.Company | @experience.Location</div>
                    <div class="text-sm text-gray-500 mb-2">
                        @experience.StartDate.ToString("MMM yyyy") - @(experience.Current ? "Present" : experience.EndDate?.ToString("MMM yyyy"))
                    </div>
                    <p class="mb-3">@experience.Description</p>
                    <ul class="list-disc list-inside text-sm text-gray-700">
                        @foreach (var achievement in experience.Achievements)
                        {
                            <li>@achievement</li>
                        }
                    </ul>
                </div>
            }
        </div>
        <div class="text-center mt-8">
            <a href="/experience" class="inline-block bg-blue-600 hover:bg-blue-500 text-white font-bold py-2 px-6 rounded">
                View Full Experience
            </a>
        </div>
    </section>
</div>