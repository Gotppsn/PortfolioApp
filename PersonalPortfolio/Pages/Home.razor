@page "/"
@inject ProjectService ProjectService
@inject IJSRuntime JSRuntime

<PageTitle>John Doe | Full-Stack Developer</PageTitle>

<div class="container mx-auto">
    <!-- Hero Section -->
<section class="py-16 md:py-24">
    <div class="flex flex-col md:flex-row items-center">
        <div class="md:w-1/2 md:pr-12 mb-8 md:mb-0 animate-slideInLeft">
            <div class="inline-block mb-2">
                <span class="px-3 py-1 bg-gradient-to-r from-blue-500 to-indigo-600 text-white rounded-full text-sm font-medium">Full-Stack Developer</span>
            </div>
            <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-800 dark:text-white">John Doe</h1>
            <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
                Passionate software developer with expertise in C#, ASP.NET Core, and cloud technologies.
                Focused on building scalable, maintainable applications that solve real-world problems.
            </p>
            <div class="flex flex-wrap gap-4">
                <a href="#projects" @onclick="ScrollToProjects" class="relative overflow-hidden group px-6 py-3 rounded-lg bg-gradient-to-r from-blue-500 to-indigo-600 text-white font-medium inline-flex items-center shadow-lg hover:shadow-xl transition-all duration-300">
                    <span class="relative z-10">View My Work</span>
                    <span class="absolute inset-0 bg-gradient-to-r from-indigo-600 to-blue-600 transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left duration-300"></span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 relative z-10" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M16.707 10.293a1 1 0 010 1.414l-6 6a1 1 0 01-1.414 0l-6-6a1 1 0 111.414-1.414L9 14.586V3a1 1 0 012 0v11.586l4.293-4.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                </a>
                <a href="/contact" class="relative overflow-hidden group px-6 py-3 rounded-lg bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-white font-medium inline-flex items-center shadow-md hover:shadow-lg transition-all duration-300">
                    <span class="relative z-10">Contact Me</span>
                    <span class="absolute inset-0 bg-gray-300 dark:bg-gray-600 transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left duration-300"></span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2 relative z-10" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                    </svg>
                </a>
            </div>
        </div>
        <div class="md:w-1/2 flex justify-center animate-slideInRight">
            <div class="relative">
                <div class="absolute -inset-4 bg-gradient-to-r from-blue-500 to-purple-600 opacity-20 blur-xl rounded-full animate-pulse"></div>
                <img src="/images/profile.jpg" alt="John Doe" class="relative z-10 rounded-full w-64 h-64 md:w-80 md:h-80 object-cover shadow-xl border-4 border-white dark:border-gray-800" />
            </div>
        </div>
    </div>
</section>

    <!-- Technologies Section -->
    <section class="py-16 border-t border-gray-200 dark:border-gray-700">
        <h2 class="text-2xl font-bold text-gray-800 dark:text-white text-center mb-12">Technologies I Work With</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-8 gap-8 justify-items-center">
            <div class="tech-icon p-4 rounded-lg bg-white dark:bg-gray-800 shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <img src="/images/technologies/csharp.png" alt="C#" class="h-12 w-12 mx-auto" />
            </div>
            <div class="tech-icon p-4 rounded-lg bg-white dark:bg-gray-800 shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <img src="/images/technologies/dotnet.png" alt=".NET" class="h-12 w-12 mx-auto" />
            </div>
            <div class="tech-icon p-4 rounded-lg bg-white dark:bg-gray-800 shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <img src="/images/technologies/blazor.png" alt="Blazor" class="h-12 w-12 mx-auto" />
            </div>
            <div class="tech-icon p-4 rounded-lg bg-white dark:bg-gray-800 shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <img src="/images/technologies/sql.png" alt="SQL" class="h-12 w-12 mx-auto" />
            </div>
            <div class="tech-icon p-4 rounded-lg bg-white dark:bg-gray-800 shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <img src="/images/technologies/js.png" alt="JavaScript" class="h-12 w-12 mx-auto" />
            </div>
            <div class="tech-icon p-4 rounded-lg bg-white dark:bg-gray-800 shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <img src="/images/technologies/azure.png" alt="Azure" class="h-12 w-12 mx-auto" />
            </div>
            <div class="tech-icon p-4 rounded-lg bg-white dark:bg-gray-800 shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <img src="/images/technologies/react.png" alt="React" class="h-12 w-12 mx-auto" />
            </div>
            <div class="tech-icon p-4 rounded-lg bg-white dark:bg-gray-800 shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <img src="/images/technologies/docker.png" alt="Docker" class="h-12 w-12 mx-auto" />
            </div>
        </div>
    </section>

    <!-- Featured Projects Section -->
    <section id="projects" class="py-16 border-t border-gray-200 dark:border-gray-700 scroll-mt-20">
        <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-12 text-center">Featured Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var project in ProjectService.GetFeaturedProjects())
            {
                <div class="project-card group" @key="project.Id">
                    <ProjectCard Project="@project" />
                </div>
            }
        </div>
        <div class="text-center mt-12">
            <a href="/projects" class="btn-primary inline-flex items-center">
                <span>View All Projects</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
            </a>
        </div>
    </section>

    <!-- Recent Experience Section -->
    <section class="py-16 border-t border-gray-200 dark:border-gray-700">
        <h2 class="text-3xl font-bold text-gray-800 dark:text-white mb-12 text-center">Recent Experience</h2>
        <div class="max-w-3xl mx-auto">
            <ExperienceTimeline />
        </div>
        <div class="text-center mt-12">
            <a href="/experience" class="btn-primary inline-flex items-center">
                <span>View Full Experience</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
            </a>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-16 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-lg mb-16">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-3xl font-bold mb-4">Let's Work Together</h2>
            <p class="text-xl mb-8 max-w-2xl mx-auto">
                Looking for a developer to bring your ideas to life? I'm currently available for freelance work and exciting opportunities.
            </p>
            <a href="/contact" class="inline-block bg-white text-blue-600 font-bold py-3 px-8 rounded-lg hover:bg-gray-100 transition-colors">
                Get in Touch
            </a>
        </div>
    </section>
</div>

@code {
    private async Task ScrollToProjects()
    {
        await JSRuntime.InvokeVoidAsync("scrollToElement", "projects");
    }
}