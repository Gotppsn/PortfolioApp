@page "/"
@inject ProjectService ProjectService

<PageTitle>Developer Portfolio</PageTitle>

<div class="container mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row items-center mb-16">
        <div class="md:w-1/2 mb-8 md:mb-0">
            <h1 class="text-4xl font-bold mb-4">John Doe</h1>
            <h2 class="text-2xl text-blue-600 mb-6">Full-Stack Developer</h2>
            <p class="text-lg mb-6">
                Passionate software developer with expertise in C#, ASP.NET Core, and cloud technologies.
                Focused on building scalable, maintainable applications that solve real-world problems.
            </p>
            <div class="flex space-x-4">
                <a href="https://github.com/yourusername" target="_blank" 
                   class="bg-gray-800 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                    GitHub
                </a>
                <a href="https://linkedin.com/in/yourusername" target="_blank"
                   class="bg-blue-600 hover:bg-blue-500 text-white font-bold py-2 px-4 rounded">
                    LinkedIn
                </a>
                <a href="/resume.pdf" target="_blank"
                   class="bg-green-600 hover:bg-green-500 text-white font-bold py-2 px-4 rounded">
                    Resume
                </a>
            </div>
        </div>
        <div class="md:w-1/2 flex justify-center">
            <img src="/images/profile.jpg" alt="John Doe" class="rounded-full w-64 h-64 object-cover shadow-lg" />
        </div>
    </div>

    <section class="mb-16">
        <h2 class="text-3xl font-bold mb-8">Featured Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var project in ProjectService.GetFeaturedProjects())
            {
                <ProjectCard Project="@project" />
            }
        </div>
        <div class="text-center mt-8">
            <a href="/projects" class="inline-block bg-blue-600 hover:bg-blue-500 text-white font-bold py-2 px-6 rounded">
                View All Projects
            </a>
        </div>
    </section>

    <section class="mb-16">
        <h2 class="text-3xl font-bold mb-8">Skills</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            @foreach (var category in ProjectService.GetSkillCategories())
            {
                <SkillBadge Category="@category" />
            }
        </div>
        <div class="text-center mt-8">
            <a href="/skills" class="inline-block bg-blue-600 hover:bg-blue-500 text-white font-bold py-2 px-6 rounded">
                View All Skills
            </a>
        </div>
    </section>

    <section class="mb-16">
        <h2 class="text-3xl font-bold mb-8">Recent Experience</h2>
        <ExperienceTimeline />
        <div class="text-center mt-8">
            <a href="/experience" class="inline-block bg-blue-600 hover:bg-blue-500 text-white font-bold py-2 px-6 rounded">
                View Full Experience
            </a>
        </div>
    </section>
</div>