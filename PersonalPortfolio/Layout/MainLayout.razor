<!-- Back to top button -->
<button @onclick="ScrollToTop" class="fixed bottom-6 right-6 p-3 rounded-full bg-blue-600 text-white shadow-lg hover:bg-blue-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 z-50 @(showBackToTop ? "opacity-100" : "opacity-0") transition-opacity duration-300">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
    </svg>
</button>

@code {
    private bool NavClosed { get; set; } = true;
    private bool showBackToTop { get; set; } = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initializeTheme");
            await JSRuntime.InvokeVoidAsync("initializeAnimation");
            await JSRuntime.InvokeVoidAsync("window.addEventListener", "scroll", DotNetObjectReference.Create(this));
        }
    }

    private void ToggleNavMenu()
    {
        NavClosed = !NavClosed;
    }

    [JSInvokable]
    public void HandleScroll()
    {
        var newShowBackToTop = true; // This would normally check scroll position
        if (newShowBackToTop != showBackToTop)
        {
            showBackToTop = newShowBackToTop;
            StateHasChanged();
        }
    }

    private async Task ScrollToTop()
    {
        await JSRuntime.InvokeVoidAsync("window.scrollTo", 0, 0);
    }
}