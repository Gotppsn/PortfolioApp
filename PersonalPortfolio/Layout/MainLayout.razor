    </svg>
</button>

@code {
    private bool NavClosed { get; set; } = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize JavaScript functions
            await JSRuntime.InvokeVoidAsync("initializeTheme");
            await JSRuntime.InvokeVoidAsync("initializeAnimation");
            await JSRuntime.InvokeVoidAsync("initializeParallax");
            await JSRuntime.InvokeVoidAsync("initializeBackToTop");
            
            // Only close mobile nav by default on small screens
            NavClosed = await JSRuntime.InvokeAsync<bool>("mediaQueryMatch", "(max-width: 768px)");
        }
    }

    private void ToggleNavMenu()
    {
        NavClosed = !NavClosed;
    }

    private async Task ScrollToTop()
    {
        await JSRuntime.InvokeVoidAsync("window.scrollTo", new { top = 0, behavior = "smooth" });
    }
}