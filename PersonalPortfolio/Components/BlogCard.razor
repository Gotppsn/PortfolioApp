@using PersonalPortfolio.Models

<div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden transform hover:-translate-y-2 transition-all duration-300 group h-full flex flex-col">
    <div class="relative overflow-hidden h-48">
        <img src="@Post.ImageUrl" alt="@Post.Title" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/30 to-transparent"></div>
        <div class="absolute bottom-0 left-0 p-4 text-white z-10">
            @if (Post.IsFeatured)
            {
                <span class="bg-gradient-to-r from-pink-600 to-purple-600 text-white text-xs px-2 py-0.5 rounded-full font-medium mb-2 inline-block">
                    Featured
                </span>
            }
            
            <h3 class="text-xl font-bold text-white line-clamp-2">@Post.Title</h3>
            
            <div class="flex items-center mt-2">
                <img src="@Post.AuthorImageUrl" alt="@Post.AuthorName" class="h-8 w-8 rounded-full border-2 border-white mr-2" />
                <div>
                    <span class="text-sm text-white font-medium">@Post.AuthorName</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="p-6 flex-grow flex flex-col">
        <div class="flex flex-wrap gap-2 mb-3">
            @foreach (var category in Post.Categories)
            {
                <span class="bg-blue-100 text-blue-800 text-xs px-2 py-0.5 rounded-full font-medium dark:bg-blue-900/30 dark:text-blue-300 transition-transform hover:scale-105">
                    @category
                </span>
            }
        </div>
        
        <div class="mb-2 flex items-center text-xs text-gray-500 dark:text-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
            </svg>
            <span>@Post.PublishedDate.ToString("MMMM dd, yyyy")</span>
            
            <span class="mx-2">â€¢</span>
            
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
            </svg>
            <span>@Post.ReadingTimeMinutes min read</span>
        </div>
        
        <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3 flex-grow">@Post.Excerpt</p>
        
        <a href="/blog/@Post.Slug" class="text-blue-600 dark:text-blue-400 hover:underline font-medium inline-flex items-center mt-auto group-hover:pl-2 transition-all">
            Read more
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform transition-transform group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
        </a>
    </div>
</div>

@code {
    [Parameter]
    public BlogPost Post { get; set; } = new();
}